<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.AppArt.thaliapp"
    android:versionCode="1"
    android:versionName="1.0">

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="21" />

    <uses-permission android:name="android.permission.INTERNET" />

    <!--
     To retrieve OAuth 2.0 tokens or invalidate tokens to disconnect a user. This disconnect
     option is required to comply with the Google+ Sign-In developer policies
    -->
    <uses-permission android:name="android.permission.USE_CREDENTIALS" />
    <!-- To retrieve the account name (email) as part of sign-in: -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.READ_PROFILE" />

    <uses-permission
        android:name="android.permission.WRITE_EXTERNAL_STORAGE"
        android:maxSdkVersion="18" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission
        android:name="android.permission.READ_EXTERNAL_STORAGE"
        android:maxSdkVersion="18" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <activity
            android:name=".Calendar.Activities.Calendar"
            android:label="@string/app_name"
            android:uiOptions="splitActionBarWhenNarrow">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Settings.Settings"
            android:label="@string/title_activity_instellingen" />
        <activity
            android:name=".Eetlijst.Activities.Eetlijst"
            android:label="@string/title_activity_eetlijst" />
        <activity
            android:name=".Settings.Notifications"
            android:label="@string/title_activity_notifications" />
        <activity
            android:name=".Calendar.Activities.Information"
            android:label="@string/title_activity_information" />
        <activity
            android:name=".Eetlijst.Activities.Receipt"
            android:label="@string/title_activity_bon" />
        <activity
            android:name=".Settings.Login"
            android:label="@string/title_activity_inlog" />
        <activity
            android:name=".Settings.Overview"
            android:label="@string/title_activity_overzicht" />

        <receiver android:name=".Settings.AlarmReceiver" />

        <activity
            android:name=".Eetlijst.Activities.FoodList"
            android:label="@string/title_activity_foodlist" />
    </application>

</manifest>
